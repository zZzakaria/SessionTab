{
  "manifest_version": 2,

  "name": "SessionTab",
  "description": "This extension allows users to store open tabs under groups and retrieve them later",
  "version": "1.0.0",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "SessionTab"
  },
  "icons": {
    "48": "logo48.png",
    "192": "logo192.png"
  },
  "content_security_policy": "script-src 'self' 'sha256-3RG52SMCOPYl9PdkTZC4nT/SERcOHpAQopBoA7UspLk='; object-src 'self'",
  "permissions": [
    "storage",
    "tabs"
  ]
}

